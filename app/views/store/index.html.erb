<p id="notice"><%= notice %></p>

<h1> Catalog </h1>
<% if session[:counter] > 5 %>
<h2> 
  You have accessed the store 
  <%= pluralize(session[:counter], 'time', 'times') %> 
</h2>
<% end %>
<% cache @products do %>
  <% @products.each do |p| %>
    <% cache p do %>
      <div class="entry">
        <%= image_tag(p.image_url) %>
        <h3><%= p.title %></h3>
        <%= sanitize(p.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(p.price) %></span>
					<%= button_to 'Add to Cart', line_items_path(product_id: p), remote: true %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
