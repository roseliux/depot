<p id="notice"><%= notice %></p>

<h1> Your Pragmatic Catalog </h1>

<% cache @products do %>
  <% @products.each do |p| %>
    <% cache p do %>
      <div class="entry">
        <%= form_tag line_items_path(:product_id => p.id), :remote => true do %>
          <%= image_submit_tag p.image_url, class: 'img'  %>
        <% end %>
        <h3><%= p.title %></h3>
        <%= sanitize(p.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(p.price) %></span>
					<%= button_to 'Add to Cart', line_items_path(product_id: p), remote: true %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
